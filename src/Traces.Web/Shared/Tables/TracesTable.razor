@using System.Collections.ObjectModel
@using Traces.Common.Constants
@using Traces.Web.Models;
@using Traces.Web.ViewModels
@inject TracesViewModel TracesViewModel

@if (Traces != null && Traces.Any())
{
    <Table class="">
        <TableHeader>
            <TableRow>
                <TableHeaderCell class="icon-header-cell"></TableHeaderCell>
                <TableHeaderCell>@TextConstants.TracesTableTitleText</TableHeaderCell>
                <TableHeaderCell>@TextConstants.TracesTableDescriptionText</TableHeaderCell>
                <TableHeaderCell>@TextConstants.TracesTableDueDateText</TableHeaderCell>
                <TableHeaderCell></TableHeaderCell>
            </TableRow>
        </TableHeader>
        <TableBody>
            @foreach (var trace in Traces)
            {
                <EditableTraceRow @key="trace.Id" Trace="trace"></EditableTraceRow>
            }
        </TableBody>
    </Table>
}

@code
{
    [CascadingParameter]
    public ReadOnlyCollection<TraceItemModel> Traces { get; set; }
}