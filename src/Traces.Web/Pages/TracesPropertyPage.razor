@page "/traces/property"
@using Traces.Common.Constants
@using Traces.Common.Enums
@using Traces.Web.ViewModels
@inject TracesPropertyViewModel TracesPropertyViewModel

<div>
    <h1>Traces</h1>

    <Button Color="Color.Primary" Clicked="@TracesPropertyViewModel.ShowCreateTraceModal">@TextConstants.TracesAddButtonText</Button>

    <div>
        <h2>@TextConstants.UpcomingTracesText</h2>
        @if (TracesPropertyViewModel.Traces != null && TracesPropertyViewModel.Traces.Any())
        {
            <Table>
                <TableHeader>
                        <TableRow>
                            <TableHeaderCell>@TextConstants.TracesTableTitleText</TableHeaderCell>
                            <TableHeaderCell>@TextConstants.TracesTableDescriptionText</TableHeaderCell>
                            <TableHeaderCell>@TextConstants.TracesTableDueDateText</TableHeaderCell>
                            <TableHeaderCell>@TextConstants.TracesTableActionsText</TableHeaderCell>
                        </TableRow>
                </TableHeader>
                <TableBody>
                    @foreach (var trace in TracesPropertyViewModel.Traces)
                    {
                        <TableRow>
                            <TableRowCell>@trace.Title</TableRowCell>
                            <TableRowCell>@trace.Description</TableRowCell>
                            <TableRowCell>@trace.DueDate.ToShortDateString()</TableRowCell>
                            <TableRowCell>
                                <Buttons>
                                    <Button Color="Color.Primary" Clicked="@(() => TracesPropertyViewModel.CompleteTraceAsync(trace.Id))">Complete</Button>
                                    <Button Color="Color.Secondary" Clicked="@(() => TracesPropertyViewModel.ShowReplaceTraceModal(trace))">Edit</Button>
                                    <Button Color="Color.Danger" Clicked="@(() => TracesPropertyViewModel.DeleteItemAsync(trace.Id))">Delete</Button>
                                </Buttons>
                            </TableRowCell>
                        </TableRow>
                    }
                </TableBody>
            </Table>
        }
        else
        {
          <p>@TextConstants.UpcomingTracesEmptyText</p>
        }
    </div>

    <Modal @ref="@TracesPropertyViewModel.CreateTraceModalRef">
        <ModalBackdrop />
        <ModalContent IsCentered="true" Size="ModalSize.Large">
            <ModalHeader>
                <ModalTitle>@TracesPropertyViewModel.EditTraceModificationModel.ModalTitle</ModalTitle>
                <CloseButton Clicked="@TracesPropertyViewModel.HideCreateTraceModal"/>
            </ModalHeader>
            <ModalBody>
                <EditTraceDialog OnClose="@TracesPropertyViewModel.HideCreateTraceModal"/>
            </ModalBody>
        </ModalContent>
    </Modal>
</div>

@code
{

    protected override async Task OnInitializedAsync()
    {
        await TracesPropertyViewModel.LoadAsync();
        await base.OnInitializedAsync();
    }

}